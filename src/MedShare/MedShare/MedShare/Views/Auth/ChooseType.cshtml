@* Página para escolha do tipo de usuário (Doador ou Instituição). *@
@{
    ViewData["Title"] = "MedShare";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }
        .main-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .logo-image {
            width: 120px;
            height: 120px;
            object-fit: contain;
        }
        .app-title {
            color: #0d6efd;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }
        .desc-text {
            max-width: 350px;
            margin-left: auto;
            margin-right: auto;
        }
        .choice-card {
            border: 2px solid #e9ecef;
            border-radius: 15px;
            transition: all 0.3s ease;
            cursor: pointer;
            height: 140px;
        }
        .choice-card:hover {
            border-color: #0d6efd;
            background: #f8f9ff;
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(13, 110, 253, 0.15);
        }
        .medicine-floating {
            animation: float 6s ease-in-out infinite;
        }
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }
        .google-btn {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 2px solid #e9ecef;
            background: white;
            color: #db4437;
            font-size: 20px;
            font-weight: bold;
        }
        .google-btn:hover {
            border-color: #db4437;
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="main-card p-5 w-100" style="max-width: 1200px;">
            <div class="row align-items-center g-2"> <!-- g-2 para diminuir o espaço -->
                <!-- Logo Section -->
                <div class="col-lg-6 text-center">
                    <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
                    <h1 class="app-title display-4 mb-2">MedShare</h1>
                    <p class="text-muted desc-text">O compartilhamento é indicado em casos de suspeita de sobras</p>
                    <div class="d-flex align-items-center gap-3 mb-3 justify-content-center">
                        <button class="btn btn-primary px-4 py-2 fw-bold" onclick="redirectToLogin()">Acessar</button>
                    </div>
                </div>
                <!-- Medicine Section -->
                <div class="col-lg-6 text-center">
                    <img src="~/images/remedios.png" alt="Medicamentos" class="img-fluid medicine-floating" style="max-width: 300px; border-radius: 15px;" />
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>

    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function redirectToLogin() {
            window.location.href = '/Auth/Login';
        }
    </script>
</body>
</html>