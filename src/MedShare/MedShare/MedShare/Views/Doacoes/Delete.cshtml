@model MedShare.Models.Doacao

@{
    ViewData["Title"] = "Cancelar Doação";
}

<h1>Cancelar Doação</h1>

<h3>Tem certeza que deseja cancelar essa doação?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeDoacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeDoacao)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValidadeDoacao)
        </dt>
        <dd class="col-sm-10">
            @(Model.ValidadeDoacao.HasValue
                        ? Model.ValidadeDoacao.Value.ToString("dd/MM/yyyy")
                        : "-")
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeDoacao)
        </dt>
        <dd class="col-sm-10">
            @Model.QuantidadeDoacao
        </dd>

        <dt class="col-sm-2">
            Foto do Medicamento
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CaminhoFoto))
            {
                <img src="@Model.CaminhoFoto" alt="Foto do Medicamento"
                     style="max-width:200px; border-radius:8px; box-shadow:0 0 4px rgba(0,0,0,0.2);" />
            }
            else
            {
                <span class="text-muted">Sem imagem</span>
            }
        </dd>

        <dt class="col-sm-2">
            Receita
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CaminhoReceita))
            {
                var extensao = System.IO.Path.GetExtension(Model.CaminhoReceita).ToLower();

                if (extensao == ".pdf")
                {
                    <a href="@Model.CaminhoReceita" target="_blank" class="btn btn-outline-primary btn-sm">
                        Visualizar PDF
                    </a>
                }
                else
                {
                    <a href="@Model.CaminhoReceita" target="_blank" title="Ampliar imagem">
                        <img src="@Model.CaminhoReceita" alt="Receita Médica"
                             style="max-width:200px; border-radius:8px; box-shadow:0 0 4px rgba(0,0,0,0.2);" />
                    </a>
                }
            }
            else
            {
                <span class="text-muted">Sem arquivo</span>
            }
        </dd>

        <dt class="col-sm-2">
            Instituição
        </dt>
        <dd class="col-sm-10">
            @Model.Instituicao?.InstituicaoNome
        </dd>
        <dt class="col-sm-2">
            Endereço da Instituição
        </dt>
        <dd class="col-sm-10">
            @Model.Instituicao?.InstituicaoEndereco
        </dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-primary">Voltar</a>
        <input type="submit" value="Cancelar doação" class="btn btn-danger" />
    </form>
</div>