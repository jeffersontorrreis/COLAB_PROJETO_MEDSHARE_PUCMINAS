@model MedShare.Models.Doador
@{
    ViewData["Title"] = "Editar Cadastro - Doador";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Cadastro - Doador</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            min-height: 100vh;
        }
        .edit-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            max-width: 480px;
            margin: 60px auto;
            padding: 48px 32px 32px 32px;
        }
        .logo-image {
            width: 100px;
            height: 100px;
            object-fit: contain;
        }
        .app-title {
            color: #0d6efd;
            font-weight: 700;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }
        .footer-gradient {
            height: 6px;
            background: linear-gradient(90deg, #ff9800 0%, #ff5722 50%, #e91e63 100%);
        }
        .form-floating .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
        }
    </style>
</head>
<body>
    <div class="edit-card">
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="MedShare Logo" class="logo-image mb-3" />
            <h1 class="app-title h2 mb-2">MedShare</h1>
            <p class="text-muted small">Atualize seus dados de cadastro</p>
        </div>
        <form asp-action="EditarDoador" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="DoadorNome" class="form-control" placeholder="Nome completo" required />
                <label asp-for="DoadorNome"><i class="bi bi-person me-2"></i>Nome completo</label>
                <span asp-validation-for="DoadorNome" class="invalid-feedback"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DoadorEmail" class="form-control" placeholder="Email" required />
                <label asp-for="DoadorEmail"><i class="bi bi-envelope me-2"></i>Email</label>
                <span asp-validation-for="DoadorEmail" class="invalid-feedback"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DoadorCPF" class="form-control" placeholder="CPF" required />
                <label asp-for="DoadorCPF"><i class="bi bi-credit-card-2-front me-2"></i>CPF</label>
                <span asp-validation-for="DoadorCPF" class="invalid-feedback"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DoadorSenha" class="form-control" type="password" placeholder="Nova Senha" />
                <label asp-for="DoadorSenha"><i class="bi bi-lock me-2"></i>Nova Senha</label>
                <span asp-validation-for="DoadorSenha" class="invalid-feedback"></span>
            </div>
            <div class="d-grid gap-2 mb-2">
                <button type="submit" class="btn btn-primary py-2 fw-bold">SALVAR</button>
                <a href="/Home/HomePageDoador" class="btn btn-outline-primary py-2 fw-bold">CANCELAR</a>
            </div>
        </form>
    </div>
    <!-- Footer -->
    <footer class="mt-auto">
        <div class="footer-gradient"></div>
        <div class="container-fluid">
            <div class="row align-items-center py-3 px-4 bg-white">
                <div class="col-md-8">
                    <div class="small text-muted lh-sm">
                        <div><i class="bi bi-geo-alt-fill text-primary me-1"></i>Av. Dom José Gaspar, 500 Coração Eucarístico – Belo Horizonte – MG 30535-901, Brasil</div>
                        <div><i class="bi bi-telephone-fill text-primary me-1"></i>Telefone: (31) 3319-4444</div>
                        <div><i class="bi bi-envelope-fill text-primary me-1"></i>E-mail: contato@medshare.com</div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="d-flex align-items-center justify-content-end text-muted small fw-semibold">
                        <i class="bi bi-info-circle-fill text-primary me-2 fs-6"></i>
                        SOBRE NÓS
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>