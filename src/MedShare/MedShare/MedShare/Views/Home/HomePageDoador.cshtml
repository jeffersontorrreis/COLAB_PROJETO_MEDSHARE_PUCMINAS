    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Animação dos números nos cards
        document.addEventListener('DOMContentLoaded', function() {
            const numbers = document.querySelectorAll('.stat-number');
            
            numbers.forEach(number => {
                const finalValue = parseInt(number.textContent);
                let currentValue = 0;
                const increment = Math.ceil(finalValue / 20);
                
                const counter = setInterval(() => {
                    currentValue += increment;
                    if (currentValue >= finalValue) {
                        number.textContent = finalValue;
                        clearInterval(counter);
                    } else {
                        number.textContent = currentValue;
                    }
                }, 50);
            });
        });

        // Toggle profile menu
        function toggleProfileMenu() {
            // Verifica autenticação e perfil via backend (Razor)
            var menuHtml = `<div id="profileDropdownMenu" class="dropdown-menu show" style="position: absolute; left: -120px; bottom: 60px; min-width: 180px;">
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Doador"))
                    {
                        <a class="dropdown-item" href='/Cadastro/EditarDoador'>Editar Cadastro</a>
                    }
                    else if (User.IsInRole("Instituicao"))
                    {
                        <a class="dropdown-item" href='/Cadastro/EditarInstituicao'>Editar Cadastro</a>
                    }
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href='/Auth/Logout'>Sair</a>
                }
                else
                {
                    <a class="dropdown-item" href='/Auth/Login'>Entrar</a>
                }
            </div>`;
            // Remove menu anterior se existir
            var oldMenu = document.getElementById('profileDropdownMenu');
            if (oldMenu) oldMenu.remove();
            // Adiciona menu ao profile-icon
            var icon = document.querySelector('.profile-icon');
            icon.insertAdjacentHTML('afterend', menuHtml);
            // Fecha ao clicar fora
            document.addEventListener('click', function handler(e) {
                if (!icon.contains(e.target)) {
                    var menu = document.getElementById('profileDropdownMenu');
                    if (menu) menu.remove();
                    document.removeEventListener('click', handler);
                }
            });
        }

        // Intercepta o botão voltar do navegador para popup de logout
        (function() {
            let isPushingState = false;
            function pushStateIfNeeded() {
                if (!isPushingState) {
                    isPushingState = true;
                    window.history.pushState('stay', '', window.location.href);
                    setTimeout(() => { isPushingState = false; }, 100);
                }
            }
            if (window.history && window.history.pushState) {
                pushStateIfNeeded();
                window.addEventListener('popstate', function (event) {
                    // Só mostra o popup se estiver autenticado
                    if (@(User.Identity.IsAuthenticated.ToString().ToLower())) {
                        showLogoutConfirm();
                    }
                });
            }
            // Garante que sempre que navegar, o estado seja atualizado
            window.addEventListener('load', pushStateIfNeeded);
        })();

        function showLogoutConfirm() {
            // Cria o popup de confirmação
            let modal = document.getElementById('logoutConfirmModal');
            if (!modal) {
                modal = document.createElement('div');
                modal.id = 'logoutConfirmModal';
                modal.innerHTML = `
                <div style="position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.3);z-index:9999;display:flex;align-items:center;justify-content:center;">
                    <div style="background:#fff;padding:32px 24px;border-radius:16px;box-shadow:0 8px 32px rgba(0,0,0,0.15);min-width:320px;text-align:center;">
                        <h5 class='mb-3'>Deseja realmente sair do sistema?</h5>
                        <div class='d-flex justify-content-center gap-3'>
                            <button id='logoutYes' class='btn btn-danger'>Sim, sair</button>
                            <button id='logoutNo' class='btn btn-secondary'>Não</button>
                        </div>
                    </div>
                </div>`;
                document.body.appendChild(modal);
                document.getElementById('logoutYes').onclick = function() {
                    window.location.href = '/Auth/Logout';
                };
                document.getElementById('logoutNo').onclick = function() {
                    modal.remove();
                    // Reempilha o estado para evitar navegação
                    window.history.pushState('stay', '', window.location.href);
                };
            }
        }

        // Bloqueia o botão voltar do navegador após login e exibe aviso de confirmação
        history.pushState(null, null, location.href);
        window.onpopstate = function () {
            showLogoutConfirm();
        };
        function showLogoutConfirm() {
            let modal = document.getElementById('logoutConfirmModal');
            if (!modal) {
                modal = document.createElement('div');
                modal.id = 'logoutConfirmModal';
                modal.innerHTML = `
                <div style="position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.3);z-index:9999;display:flex;align-items:center;justify-content:center;">
                    <div style="background:#fff;padding:32px 24px;border-radius:16px;box-shadow:0 8px 32px rgba(0,0,0,0.15);min-width:320px;text-align:center;">
                        <h5 class='mb-3'>Deseja realmente sair do sistema?</h5>
                        <div class='d-flex justify-content-center gap-3'>
                            <button id='logoutYes' class='btn btn-danger'>Sim, sair</button>
                            <button id='logoutNo' class='btn btn-secondary'>Não</button>
                        </div>
                    </div>
                </div>`;
                document.body.appendChild(modal);
                document.getElementById('logoutYes').onclick = function() {
                    window.location.href = '/Auth/Logout';
                };
                document.getElementById('logoutNo').onclick = function() {
                    modal.remove();
                    history.pushState(null, null, location.href);
                };
            }
        }
    </script>
</body>
